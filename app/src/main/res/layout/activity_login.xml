<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="88dp"
        android:src="@mipmap/ic_launcher" />
    <com.caicai.web.app.view.ClearEditText
        android:id="@+id/user_name"
        android:hint="请输入账号"
        android:drawablePadding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@mipmap/ic_user_phone"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="16dp"
        android:background="@drawable/linearlayout_underline_view"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.caicai.web.app.view.ClearEditText
        android:id="@+id/pass_word"
        android:hint="请输入密码"
        android:layout_marginTop="15dp"
        android:drawablePadding="@dimen/dp_10"
        android:inputType="textPassword"
        android:drawableLeft="@mipmap/ic_user_pwd"
        android:background="@drawable/linearlayout_underline_view"
        android:layout_marginLeft="16dp"
        android:padding="@dimen/dp_10"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.aries.ui.view.radius.RadiusTextView
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:id="@+id/login"
        android:text="登陆"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:padding="14dp"
        app:rv_radius="2.5dp"
        app:rv_backgroundColor="@color/login_color"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:text="注册"
        android:layout_marginTop="9dp"
        android:id="@+id/register"
        android:padding="@dimen/dp_10"
        android:textColor="@color/color_999999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.0"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_above="@+id/third_login_layout"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_999999"
                android:layout_height="1dp" />
            <TextView
                android:gravity="center"
                android:text="其他登录方式"
                android:padding="2.5dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="20dp"
                android:background="@color/color_999999"
                android:layout_gravity="center_vertical"
                android:layout_height="1dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_login_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/we_chart_login"
            android:src="@mipmap/ic_share_dialog_wechart_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/qq_login"
            android:layout_toEndOf="@+id/we_chart_login"
            android:layout_marginLeft="102dp"
            android:src="@mipmap/ic_share_dialog_wechart_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>