<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <TextView
        android:padding="@dimen/dp_10"
        android:layout_marginTop="51dp"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:text="手机注册"
        android:layout_height="wrap_content" />
    <com.ntcai.ntcc.view.ClearEditText
        android:id="@+id/user_name"
        android:hint="请输入手机号"
        android:drawablePadding="@dimen/dp_10"
        android:inputType="number"
        android:maxLength="11"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="16dp"
        android:background="@drawable/linearlayout_underline_view"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:background="@drawable/linearlayout_underline_view"
        >

        <com.ntcai.ntcc.view.ClearEditText
            android:id="@+id/phone_code"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            android:hint="请输入验证码"
            android:drawablePadding="@dimen/dp_10"
            android:inputType="number"
            android:maxLength="6"
            android:background="@null"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/getCode"
            android:textColor="@color/color_666666"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:text="发送验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.ntcai.ntcc.view.ClearEditText
        android:id="@+id/pass_word"
        android:hint="设置6-16位密码(由数字,字母或者符号组成)"
        android:drawablePadding="@dimen/dp_10"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/linearlayout_underline_view"
        android:layout_marginLeft="16dp"
        android:padding="@dimen/dp_10"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.ntcai.ntcc.view.ClearEditText
        android:hint="请再次输入密码"
        android:drawablePadding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:inputType="textPassword"
        android:background="@drawable/linearlayout_underline_view"
        android:layout_marginLeft="16dp"
        android:padding="@dimen/dp_10"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.aries.ui.view.radius.RadiusTextView
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:text="注册"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:padding="14dp"
        app:rv_radius="2.5dp"
        app:rv_backgroundColor="@color/login_color"
        android:layout_height="wrap_content" />
    <TextView
        android:text="账号密码登陆"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:id="@+id/uid_register"
        android:textColor="@color/home_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1.0"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/we_chart_login"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/color_999999"
                android:layout_height="1dp" />
            <TextView
                android:gravity="center"
                android:text="其他登录方式"
                android:padding="2.5dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="20dp"
                android:background="@color/color_999999"
                android:layout_gravity="center_vertical"
                android:layout_height="1dp" />
        </LinearLayout>


        <ImageView
            android:layout_above="@+id/register_agree"
            android:id="@+id/we_chart_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="47dp"
            android:src="@mipmap/ic_share_dialog_wechart_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/register_agree"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="19dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>