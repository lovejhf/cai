<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/window_color</item>
        <item name="android:textSize">14sp</item> <!--  搞掂字体大小-->
        <item name="android:textColor">@color/home_text_color</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="main_bottom_tab_style" parent="@style/base_tab_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_tab_style">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:paddingTop">5.0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">2.0dp</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
